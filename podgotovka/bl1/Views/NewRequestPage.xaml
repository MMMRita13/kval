<Page x:Class="bl1.Views.NewRequestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:bl1.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewRequestPage">

    <Grid Background="White">

        <StackPanel VerticalAlignment="Center"
            HorizontalAlignment="Center"
            MinWidth="200">

            <TextBlock Text="ID"/>
            <TextBox x:Name="IdReqTbx"/>

            <TextBlock Text="Name"/>
            <TextBox x:Name="ReqNameTbx"/>

            <TextBlock Text="Request Number"/>
            <TextBox x:Name="ReqNumberTbx"/>

            <TextBlock Text="Technika"/>
            <ComboBox x:Name="CmbTech"
              DisplayMemberPath="TechName"
              Margin="0 10"/>

            <TextBlock Text="Client"/>
            <ComboBox x:Name="CmbClient"
                      DisplayMemberPath="FIOClient"
                      Margin=" 0 10"/>

            <TextBlock Text="Worker"/>
            <ComboBox x:Name="CmbWorker"
                      DisplayMemberPath="WorkerFIO"
                      Margin="0 10"/>

            <Button Content="Save"
            Click="Save_Btn_Click"/>

        </StackPanel>

    </Grid>
</Page>
