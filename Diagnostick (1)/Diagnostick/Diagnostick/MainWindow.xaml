<Window x:Class="Diagnostick.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diagnostick"
        mc:Ignorable="d"
        Title="Диагностика оборудования" Height="250" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Оборудование по участкам" Click="OpenEquipmentPerSite_Click" Width="250" Margin="10"/>
            <Button Content="Организации диагностики за период" Click="OpenDiagnosticsOrganizations_Click" Width="250" Margin="10"/>
            <Button Content="Управление оборудованием" Click="OpenManageEquipment_Click" Width="250" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
