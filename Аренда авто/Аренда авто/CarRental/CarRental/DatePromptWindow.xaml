<Window x:Class="CarRental.DatePromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarRental"
        mc:Ignorable="d"
        Title="DatePromptWindow" Height="200" Width="300">
    <Grid>
        <TextBlock Text="Выберите дату:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0"/>
        <DatePicker x:Name="DatePicker" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,40,10,0"/>

        <Button Content="ОК" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10,10,10,10" Click="OkButton_Click"/>
    </Grid>
</Window>
