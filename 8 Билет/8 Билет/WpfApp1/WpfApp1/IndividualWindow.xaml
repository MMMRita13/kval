<Window x:Class="WpfApp1.IndividualWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="IndividualWindow" Height="200" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="ФИО"/>
            <TextBox x:Name="TbFIO" Width="300" Margin="0,0,0,10"/>

            <Label Content="Адрес"/>
            <TextBox x:Name="TbAdr" Width="300" Margin="0,0,0,10"/>
            
            <Label Content="Телефонный номер:"/>
            <TextBox x:Name="TbNumb" Width="300" Margin="0,0,0,10"/>

            <Button Content="Сохранить" Width="100" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
