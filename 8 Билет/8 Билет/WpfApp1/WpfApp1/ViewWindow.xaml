<Window x:Class="WpfApp1.ViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="ViewWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Введите количество дней" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10"/>
        <TextBox Name="textBoxDays" Width="150" Margin="10" Height="30" VerticalAlignment="Top"/>
        <DataGrid Name="DtUnit" AutoGenerateColumns="True" Margin="10,40,10,10" >
            
        </DataGrid>
        <Button Content="Загрузить данные" Click="Button_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"/>
        <Button Content="Печать" Click="Button_Click_1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,130,0"/>
    </Grid>
</Window>
