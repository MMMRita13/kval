<Window x:Class="WpfApp1.LegalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="LegalWindow" Height="200" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Название компании:"/>
            <TextBox x:Name="textBoxCompanyName" Width="300" Margin="0,0,0,10"/>

            <Label Content="Телефонный номер:"/>
            <TextBox x:Name="textBoxCompanyNumber" Width="300" Margin="0,0,0,10"/>

            <Button Content="Сохранить" Width="100" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
