<Window x:Class="Orders.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Отчеты" Height="600" Width="800">
    <StackPanel Margin="10">
        <Button Content="Формировать товарную накладную" Click="GenerateInvoice_Click" Margin="5" Height="40"/>
        <Button Content="Формировать отчет для руководителя" Click="GenerateManagerReport_Click" Margin="5" Height="40"/>
        <TextBlock x:Name="ReportText" Margin="10" TextWrapping="Wrap" Text="Отчеты" TextAlignment="Center"/>
    </StackPanel>
</Window>
